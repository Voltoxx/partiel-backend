{% block stylesheets %}
    <style>
        .form-wrapper {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            margin: 0 auto;
            font-family: Arial, sans-serif;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            font-weight: 600;
            margin-bottom: 8px;
            color: #333;
        }

        .form-group input,
        .form-group select,
        .form-group textarea {
            width: 100%;
            padding: 12px;
            border: 1px solid #ccc;
            border-radius: 4px;
            font-size: 1rem;
            box-sizing: border-box;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

        .form-group input:focus,
        .form-group select:focus,
        .form-group textarea:focus {
            border-color: #2196F3; /* Bleu vif pour les champs actifs */
            box-shadow: 0 0 6px rgba(33, 150, 243, 0.2);
            outline: none;
        }

        button[type="submit"] {
            padding: 12px 24px;
            background-color: #2196F3; /* Bleu vif pour les boutons */
            color: #ffffff;
            border: none;
            border-radius: 4px;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease, box-shadow 0.3s ease;
            text-align: center;
            display: inline-block;
        }

        button[type="submit"]:hover {
            background-color: #1976D2; /* Bleu légèrement plus foncé au survol */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        }

        button[type="submit"]:active {
            background-color: #1565C0; /* Bleu encore plus foncé à l'activation */
        }

        .form-error {
            color: #e74c3c; /* Couleur rouge pour les erreurs */
            font-size: 0.875rem;
            margin-top: 5px;
        }

        .form-actions {
            margin-top: 20px;
            text-align: right;
        }
        
        .material-selection {
            margin-top: 20px;
        }
    </style>
{% endblock %}

{{ form_start(form) }}
    <div class="form-wrapper">
            <div class="form-container">
                {{ form_widget(form) }}
            </div>
        
        <div class="material-selection">
            <h3>Matériaux disponibles</h3>
            {% for item in form.commandeMaterial %}
                <div class="form-group">
                    <label>{{ item.vars.data.material.getNom() }}</label>
                    {{ form_widget(item.quantite) }}
                </div>
            {% endfor %}
        </div>

        <div class="form-actions">
            <button type="submit">{{ button_label|default('Enregistrer') }}</button>
        </div>
    </div>
{{ form_end(form) }}
