{% extends 'base.html.twig' %}

{% block title %}Créer une Nouvelle Commande{% endblock %}

{% block stylesheets %}
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f4f8;
            color: #333;
            margin: 0;
            padding: 20px;
        }

        h1 {
            color: #2196F3;
            font-size: 2.5rem;
            margin-bottom: 20px;
            text-align: center;
        }

        .form-wrapper {
            background-color: #ffffff;
            padding: 30px;
            border-radius: 8px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            max-width: 600px;
            margin: 0 auto 20px;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group label {
            display: block;
            color: #333;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }

        .form-group input, .form-group select {
            width: 100%;
            padding: 0.5rem;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box;
            margin-top: 0.25rem;
        }

        .form-group .form-error {
            color: #e74c3c;
            font-size: 0.875rem;
            margin-top: 0.5rem;
        }

        .btn {
            display: inline-block;
            padding: 10px 20px;
            background-color: #2196F3;
            color: #ffffff;
            text-decoration: none;
            border-radius: 5px;
            text-align: center;
            cursor: pointer;
            border: none;
            font-size: 1rem;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .btn:hover {
            background-color: #1976D2;
            transform: scale(1.02);
        }

        .btn:active {
            background-color: #1565C0;
            transform: scale(0.98);
        }

        .btn-back {
            background-color: #2196F3; /* Couleur bleue similaire à celle du bouton Ajouter */
            color: #ffffff;
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            font-size: 1rem;
            text-align: center;
            display: inline-block;
            cursor: pointer;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .btn-back:hover {
            background-color: #1976D2; /* Couleur au survol */
        }

        .btn-back:active {
            background-color: #1565C0; /* Couleur active */
        }

        .material-list {
            list-style-type: disc;
            padding-left: 1.25rem;
            margin-bottom: 1.5rem;
        }

        .material-list-item {
            margin-bottom: 1rem;
        }

        .material-section {
            margin-bottom: 1.5rem;
        }

        .form-actions {
            display: flex;
            justify-content: center;
            gap: 15px; /* Espace entre les boutons */
            margin-top: 1.5rem;
        }
    </style>
{% endblock %}

{% block body %}
    <h1>Créer une Nouvelle Commande</h1>

    {{ form_start(form, {'attr': {'class': 'form-wrapper'}}) }}
    
    <div class="form-group">
        {{ form_label(form.nomClient) }}
        {{ form_widget(form.nomClient) }}
        {{ form_errors(form.nomClient, {'attr': {'class': 'form-error'}}) }}
    </div>

    <div class="material-section">
        <h3>Matériaux à louer</h3>
        <ul class="material-list">
            {% for material in materials %}
                <li class="material-list-item">
                    <div class="form-group">
                        {{ form_label(form['material_' ~ material.id]) }}
                        {{ form_widget(form['material_' ~ material.id]) }}
                        {{ form_errors(form['material_' ~ material.id], {'attr': {'class': 'form-error'}}) }}
                    </div>
                </li>
            {% endfor %}
        </ul>
    </div>

    <div class="form-actions">
        <a href="{{ path('app_commande_index') }}" class="btn-back">Retour à la liste</a>
        <button type="submit" class="btn">{{ button_label|default('Ajouter la commande') }}</button>
    </div>
    
    {{ form_end(form) }}
{% endblock %}
